option_settings:
  aws:elasticbeanstalk:application:environment:
    NODE_ENV: production
    PORT: 8080
    AWS_REGION: us-east-1
    # AWS_BEDROCK_API_KEY: Set this in AWS Console Environment Variables
    # GEMINI_API_KEY: Set this in AWS Console Environment Variables
    FRONTEND_URL: https://bwglobaladvis.com
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /: dist/index.html
    /assets: dist/assets
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "npm start"
    NodeVersion: 20.10.0
    GzipCompression: true
  aws:autoscaling:launchconfiguration:
    InstanceType: t3.medium
    IamInstanceProfile: aws-elasticbeanstalk-ec2-role
  aws:elasticbeanstalk:healthreporting:system:
    SystemType: enhanced
  aws:elasticbeanstalk:application:environment:
    REACT_APP_USE_REAL_AI: true
    REACT_APP_USE_REAL_DATA: true
    REACT_APP_USE_REAL_BACKEND: true